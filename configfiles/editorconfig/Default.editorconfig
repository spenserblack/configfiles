# DESCRIPTION Standardized all files to LF line endings, UTF-8 charset, no trailing whitespace and a final newline, and adds reasonable defaults files common to multiple types of projects
root = true

[*]
end_of_line = LF
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
